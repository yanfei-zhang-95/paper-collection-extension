{
  "manifest_version": 3,
  "name": "Paper Collection",
  "version": "1.0",
  "description": "Save and manage academic papers with comments and search functionality",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "*://*.arxiv.org/*",
    "*://*.scholar.google.com/*",
    "*://*.ieeexplore.ieee.org/*",
    "*://*.dl.acm.org/*",
    "*://*.sciencedirect.com/*",
    "*://*.springer.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.arxiv.org/*",
        "*://*.scholar.google.com/*",
        "*://*.ieeexplore.ieee.org/*",
        "*://*.dl.acm.org/*",
        "*://*.sciencedirect.com/*",
        "*://*.springer.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 